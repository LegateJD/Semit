<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:padding">@dimen/padding_screen</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_divider</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginLeft">@dimen/margin_buttons_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_buttons_horizontal</item>
    </style>

    <style name="CalculatorButton.SimpleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@color/colorIcon</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:layout_marginTop">@dimen/margin_buttons_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_buttons_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_buttons_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_buttons_horizontal</item>
    </style>

    <style name="CalculatorButton.Operation" parent="CalculatorButton.SimpleButton">
    </style>

    <style name="CalculatorButton.Equ" parent="CalculatorButton.SimpleButton">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="CalculatorButton.Clear" parent="CalculatorButton.SimpleButton">
        <item name="android:textColor">@color/colorTextAttention</item>
    </style>

    <style name="CalculatorField" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingTop">@dimen/padding_field_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_field_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_field_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_field_horizontal</item>
    </style>

    <style name="CalculatorField.Equation" parent="CalculatorField">
        <item name="android:textSize">@dimen/text_size_equation</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="CalculatorField.Result" parent="CalculatorField">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/text_size_results</item>
    </style>

    <style name="CalculatorButton.Controls" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/size_icon</item>
        <item name="android:layout_height">@dimen/size_icon</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/colorIcon</item>
        <item name="android:layout_margin">@dimen/margin_icon</item>
    </style>

</resources>
